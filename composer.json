{
    "name": "bhsong/k3s-php-db",
    "description": "Double Entry Bookkeeping System",
    "type": "project",
    "require": {
        "php": "^8.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        },
        "files": [
            "src/Core/functions.php"
        ]
    },
    "authors": [
        {
            "name": "bhsong"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "pestphp/pest": "^3.8",
        "phpstan/phpstan": "^2.1",
        "laravel/pint": "^1.27",
        "mockery/mockery": "^1.6"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
